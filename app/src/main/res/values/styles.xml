<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Tablet" parent="@style/Base.Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="EditTextLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
    </style>

    <style name="EditTextView" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="InstructionDetailTextView">
        <item name="android:layout_marginTop">@dimen/layout_margin_top</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InstructionDetailImageView">
        <item name="android:layout_margin">@dimen/layout_zero_dp</item>
        <item name="android:layout_width">@dimen/layout_zero_dp</item>
        <item name="android:layout_height">@dimen/layout_zero_dp</item>
    </style>

    <style name="WorkoutDetailTextView" parent="InstructionDetailTextView">
        <item name="android:layout_height">@dimen/layout_zero_dp</item>
        <item name="android:layout_width">@dimen/layout_zero_dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
    </style>

    <style name="WorkoutDetailRecycler">
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:layout_width">@dimen/layout_zero_dp</item>
        <item name="android:layout_height">@dimen/layout_zero_dp</item>
    </style>

    <style name="InstructionListItem">
        <item name="android:layout_margin">@dimen/layout_margin_extended</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="FragmentLayout">
        <item name="android:layout_width">@dimen/layout_zero_dp</item>
        <item name="android:layout_height">@dimen/layout_zero_dp</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
    </style>
</resources>
